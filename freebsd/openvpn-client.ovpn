cat > ~/client.ovpn <<EOF
client
dev tun
proto udp
remote YOUR.SERVER.IP 1194
resolv-retry infinite
nobind
persist-key
persist-tun
remote-cert-tls server
cipher AES-256-CBC
verb 3

<ca>
$(cat /usr/local/etc/easy-rsa/pki/ca.crt)
</ca>

<cert>
$(cat /usr/local/etc/easy-rsa/pki/issued/client.crt)
</cert>

<key>
$(cat /usr/local/etc/easy-rsa/pki/private/client.key)
</key>
EOF
