SELECT
   SUBSTRING_INDEX(SUBSTRING_INDEX(text, ' ', 3), ' ', -1) as sura_name,
   SUBSTRING_INDEX(SUBSTRING_INDEX(text, ' ', 4), ' ', -1) as sura_id,
   if()
   SUBSTRING_INDEX(SUBSTRING_INDEX(text, ' ', 6), ' ', -1) AS page
FROM quran_line  WHERE text LIKE '%*2*%';


SELECT if(SUBSTRING_INDEX(SUBSTRING_INDEX(text, ' ', 4), ' ', -1))


SELECT COUNT(LENGTH(text) - LENGTH(REPLACE(text, ' ', '')) + 1) 
FROM quran_line  WHERE text LIKE '%*2*%';

ALTER TABLE quran_line AUTO_INCREMENT = 1



SELECT * FROM quran_line where TEXT regexp '\\{'

+[[:xdigit:]]

SELECT * FROM quran_line where TEXT regexp '\\('


SELECT * FROM quran_line where TEXT regexp '^\\{*'  


SELECT * FROM quran_line where TEXT REGEXP '^[0-9]+'

SELECT * FROM quran_line where TEXT regexp '[[:xdigit:]]'

SELECT * FROM quran_line where TEXT regexp '

[a-zA-Z]{3}[0-9]{4}'


الصِّرَاطَ المُستَقِيمَ {6} صِرَاطَ الَّذِينَ أَنع...

Some text here {6} and here


UPDATE quran_line
SET sura_id = REPLACE(REPLACE(SUBSTRING_INDEX(SUBSTRING_INDEX(text, ' ', 4), ' ', -1), '(',''),')','')
WHERE sura_id = 0  AND text LIKE '%*2*%' 


